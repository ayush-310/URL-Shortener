<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>URL Shortener</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            padding-top: 70px;
            /* prevent overlap with fixed navbar */
        }

        .card {
            border-radius: 12px;
        }

        .table thead th {
            position: sticky;
            top: 0;
            background-color: #212529;
            color: white;
        }

        .table-container {
            max-height: 77vh;
            overflow-y: auto;
        }
    </style>
</head>

<body class="bg-light">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top shadow">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="#">URL Shortener</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="/">Home</a>
                    </li>
                </ul>
                <form class="d-flex" action="/user/logout" method="POST">
                    <button class="btn btn-outline-light" type="submit">Logout</button>
                </form>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container py-4">
        <!-- <h1 class="text-center mb-4">URL Shortener</h1> -->

        <% if (locals.id) { %>
            <div id="urlAlert"
                class="alert d-flex justify-content-center align-items-center gap-3 alert-success text-center position-relative">
                URL Generated:
                <a href="http://localhost:8001/url/<%= id %>" target="_blank" class="fw-medium">
                    http://localhost:8001/url/<%= id %>
                </a>

                <small class="bg-danger text-white px-2 py-1 rounded  d-inline-block">
                    <span id="countdown" class="">30</span>s
                </small>
            </div>
            <% } %>

                <div class="row">
                    <!-- Left Column: URL Input Form -->
                    <div class="col-md-4 mb-4">
                        <div class="col-md-12 mb-4">
                            <div class="card p-4 shadow-sm">
                                <h4 class="mb-3">Enter a URL</h4>
                                <form method="POST" action="/url">
                                    <div class="mb-3">
                                        <label class="form-label">Original URL</label>
                                        <input type="text" name="url" class="form-control"
                                            placeholder="https://example.com" required />
                                    </div>
                                    <button type="submit" class="btn btn-primary w-100">Generate Short URL</button>
                                </form>
                            </div>
                        </div>
                        <div class="col-md-12 mb-4">
                            <div class="card p-4 shadow-sm">
                                <h4 class="mb-3">Search a URL</h4>
                                <form method="POST" action="/url">
                                    <div class="mb-3">
                                        <label class="form-label">Original URL</label>
                                        <input type="text" name="url" class="form-control"
                                            placeholder="https://example.com" required />
                                    </div>
                                    <button type="submit" class="btn btn-primary w-100">Search URL</button>
                                </form>
                            </div>
                        </div>
                    </div>

                    <!-- Right Column: URL Table -->
                    <div class="col-md-8">
                        <% if (locals.urls && urls.length> 0) { %>
                            <div class="card p-3 shadow-sm table-container">
                                <h4 class="mb-3">Your Shortened URLs</h4>
                                <div class="table-responsive">
                                    <table class="table table-bordered table-striped mb-0">
                                        <thead class="table-dark">
                                            <tr>
                                                <th>#</th>
                                                <th>Short URL</th>
                                                <th>Original URL</th>
                                                <th>Clicks</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% urls.forEach((url, index)=> { %>
                                                <tr>
                                                    <td>
                                                        <%= index + 1 %>
                                                    </td>
                                                    <td>
                                                        <a class="text-decoration-none"
                                                            href="http://localhost:8001/url/<%= url.shortID %>"
                                                            target="_blank">
                                                            <%= url.shortID %>
                                                        </a>
                                                    </td>
                                                    <td class="d-flex flex-wrap">
                                                        <a class="text-decoration-none" href="<%= url.redirectURL %>"
                                                            target="_blank">
                                                            <%= url.redirectURL %>
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <%= url.visitHistory.length %>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <% } else { %>
                                <div class="alert alert-info">No URLs shortened yet.</div>
                                <% } %>
                    </div>
                </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let countdown = 30;
        const countdownElement = document.getElementById("countdown");
        const alertElement = document.getElementById("urlAlert");

        const interval = setInterval(() => {
            countdown--;
            countdownElement.textContent = countdown;

            if (countdown <= 0) {
                clearInterval(interval);
                alertElement.remove(); // Hide the alert after 30s
            }
        }, 1000);
    </script>
</body>

</html>