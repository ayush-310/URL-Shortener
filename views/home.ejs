<!DOCTYPE html>
<html lang="en">

<%- include("partials/head") %>

    <body class="bg-light py-5">

        <%- include("partials/navbar") %>

            <div class="container py-4">
                <%- include("partials/alert") %>

                    <div class="row">
                        <!-- Left Column: URL Input Form -->
                        <div class="col-md-4 mb-4">
                            <div class="col-md-12 mb-4">
                                <div class="card p-4 shadow-sm">
                                    <h4 class="mb-3">Enter a URL</h4>
                                    <form method="POST" action="/url">
                                        <div class="mb-3">
                                            <label class="form-label">Original URL</label>
                                            <input type="text" name="url" class="form-control"
                                                placeholder="https://example.com" required />
                                        </div>
                                        <button type="submit" class="btn btn-primary w-100">Generate Short
                                            URL</button>
                                    </form>
                                </div>
                            </div>

                        </div>

                        <!-- Right Column: URL Table -->
                        <div class="col-md-8">
                            <% if (locals.urls && urls.length> 0) { %>
                                <div class="card p-3 shadow-sm table-container">
                                    <h4 class="mb-3">Your Shortened URLs</h4>
                                    <div class="table-responsive">
                                        <table class="table table-bordered mb-0">
                                            <thead class="table-dark">
                                                <tr>
                                                    <th>S.No</th>
                                                    <th>Short URL</th>
                                                    <th class="text-center">QR</th>
                                                    <th class="text-center"></th>
                                                    <th>Original URL</th>
                                                    <th>Clicks</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% urls.forEach((url, index)=> { %>
                                                    <tr>
                                                        <td class="text-center align-middle">
                                                            <%= index + 1 %>
                                                        </td>
                                                        <td class="text-center align-middle">
                                                            <a class="text-decoration-none"
                                                                href="<%= `${process.env.BASE_URL}/url/${url.shortID}` %>"
                                                                target="_blank">
                                                                <%= url.shortID %>
                                                            </a>
                                                        </td>
                                                        <td class="text-center align-middle">
                                                            <% if (url.QR) { %>
                                                                <img class="" style="width:100px; height:auto;"
                                                                    src="<%= url.QR %>" alt="QR Code" />
                                                                <% } %>
                                                        </td>
                                                        <td class="text-center align-middle">
                                                            <a href="<%= url.QR %>"
                                                                download="qr_<%= url.shortID %>.png">
                                                                <img style="width:50px; height:auto;"
                                                                    src="https://media.istockphoto.com/id/844294300/vector/download-icon-isolated-vector.jpg?s=612x612&w=0&k=20&c=VCmvy8uEoTQnt9W0kZzjEBplN_opDkGKF_eQTLfkivs="
                                                                    alt="Download QR" />
                                                            </a>
                                                        </td>

                                                        <td class="text-center align-middle">
                                                            <a class="text-decoration-none"
                                                                href="<%= url.redirectURL %>" target="_blank">
                                                                <%= url.redirectURL %>
                                                            </a>
                                                        </td>
                                                        <td class="text-center align-middle">
                                                            <%= url.visitHistory.length %>
                                                        </td>
                                                    </tr>
                                                    <% }) %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <% } else { %>
                                    <div class="alert alert-info">No URLs shortened yet.</div>
                                    <% } %>
                        </div>
                    </div>

            </div>

            <%- include("partials/script") %>

    </body>

</html>