<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title>

    <!-- âœ… Bootstrap 5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">

    <div class="container py-5">
        <h1 class="text-center mb-4">URL Shortener</h1>

        <% if (locals.id) { %>
            <div class="alert alert-success text-center">
                URL Generated: <a href="http://localhost:8001/url/<%= id %>" target="_blank">http://localhost:8001/url/<%= id %></a>
            </div>
        <% } %>

        <!-- URL Input Form -->
        <div class="card p-4 mb-4 shadow-sm">
            <form method="POST" action="/url">
                <div class="mb-3">
                    <label class="form-label">Enter Your Original URL</label>
                    <input type="text" name="url" class="form-control" placeholder="https://example.com" required />
                </div>
                <button type="submit" class="btn btn-primary w-100">Generate</button>
            </form>
        </div>

        <!-- URL Table -->
        <% if (locals.urls) { %>
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>S.No</th>
                            <th>Short ID</th>
                            <th>Redirect URL</th>
                            <th>Clicks</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% urls.forEach((url, index)=> { %>
                            <tr>
                                <td><%= index + 1 %></td>
                                <td><%= url.shortID %></td>
                                <td><a href="<%= url.redirectURL %>" target="_blank"><%= url.redirectURL %></a></td>
                                <td><%= url.visitHistory.length %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } %>
    </div>

    <!-- Optional Bootstrap JS (for future interactivity if needed) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
